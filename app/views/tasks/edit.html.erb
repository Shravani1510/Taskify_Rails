<h1>Edit Task</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.submit 'Update Task' %>
  </div>
<% end %>

<%= link_to 'Back to Tasks', tasks_path %>
